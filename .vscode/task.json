{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake: configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "problemMatcher": ["$gcc"],
            "group": "build"
        },
        {
            "label": "cmake: build app",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--target",
                "my_app"
            ],
            "dependsOn": ["cmake: configure"],
            "problemMatcher": ["$gcc"],
            "group": "build"
        },
        {
            "label": "cmake: build tests",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--target",
                "my_tests"
            ],
            "dependsOn": ["cmake: configure"],
            "problemMatcher": ["$gcc"],
            "group": "build"
        },
        {
            "label": "run: app",
            "type": "shell",
            "command": "${workspaceFolder}/build/my_app",
            "dependsOn": ["cmake: build app"],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "run: tests (ctest)",
            "type": "shell",
            "command": "ctest",
            "args": [
                "--test-dir",
                "${workspaceFolder}/build",
                "--output-on-failure"
            ],
            "dependsOn": ["cmake: build tests"],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        }
    ]
}
